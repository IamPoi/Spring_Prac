<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<!-- <select id="postView" parameterType="map" resultType="list"> -->
<mapper namespace="com.example.demo.mapper.PostSearchMapper">
	<select id="postSearch" resultType="com.example.demo.model.PostDTO" parameterType="map">
		select * 
		from select * from post where dong_num = #{dong_num} want
		where want.title like '%#{search}%' or want.content like '%#{search}%'
	</select>
	
</mapper>