<mapper namespace="com.example.demo.mapper.CommentUpdateMapper">
	<!-- <select id="postView" parameterType="map" resultType="list"> -->
	<update id="commentUpdate" parameterType="map">
		update comment
		 set content = #{content}
		where comment_num = #{comment_num}
	</update>
	
</mapper>